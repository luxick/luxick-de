@{
    ViewBag.Title = "Tools";
    Layout = "_Layout";
}

<h2>Tools</h2>

<article>
    <h3>Hombank Converter</h3>
    <p>Convert Transaction History Exports from Sprakasse to a Hombank compatible CSV format</p>
    <form hx-encoding="multipart/form-data" 
          hx-post
          hx-controller="Tools"
          hx-action="HomebankConvert">
        <input type="file" name="file">
        <button>Convert <img height="14" class="htmx-indicator" src="/img/spinner.svg" alt="loading"/></button>
    </form>
</article>